@model List<Comment>
<div id="Update">
    @if (Model.Count == 0)
    {
        <p>No commasdasdents\</p>
    }
    else
    {

        foreach (var obj in Model)
        {
            <div class="card p-3">

                <div class="d-flex justify-content-between align-items-center">

                    <div class="user d-flex flex-row align-items-center">


                        <span><small class="font-weight-bold text-primary">@obj.UserName</small> <small class="font-weight-bold">@obj.Description </small></span>

                    </div>


                    <small>@obj.Date</small>

                </div>

            </div>
        }
    }
</div>

